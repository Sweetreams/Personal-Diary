generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  login          String  @unique
  bcryptpassword String
  name           String?
  imgURL         String?
  role           ROLE    @default(admin)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Post Post[]
}

model Post {
  id       Int      @id @default(autoincrement())
  user     User     @relation(fields: [id_user], references: [id], onDelete: Cascade)
  id_user  Int
  title    String
  desc     String
  emotions EMOTIONS? @default(none)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  TagsAndPost TagsAndPost[]
}

model Tags {
  id  Int    @id @default(autoincrement())
  tag String

  TagsAndPost TagsAndPost[]
}

model TagsAndPost {
  id      Int  @id @default(autoincrement())
  tags    Tags @relation(fields: [id_tags], references: [id], onDelete: Cascade)
  post    Post @relation(fields: [id_post], references: [id], onDelete: Cascade)
  id_tags Int
  id_post Int
}

model MailToken {
  email String @unique
  token String @unique
}

enum ROLE {
  user
  admin
}

enum EMOTIONS {
  none //Отсутсвие явное
  happiness //Радость
  anticipation //Предвкушение
  sadness //Грусть
  anger //Гнев
  excitement //Волнение
  boredom //Скука
  embarrassment //Смущение
  other //Другое
}
